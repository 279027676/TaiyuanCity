<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linearlayout_footer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 显示图片 -->

    <RadioButton
        android:id="@+id/main_footbar_lcty"
        style="@style/main_footbar_radio"
        android:checked="true"
        android:drawableTop="@drawable/widget_bar_lcty" />

    <!-- 分割竖线 -->

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_wzty"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_wzty" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_xzty"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_xzty" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_shake_i_like"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_ywxh" />


</LinearLayout>